{
  "name": "hugoblox",
  "version": "0.6.0",
  "description": "The official CLI for creating and managing HugoBlox sites.",
  "type": "module",
  "bin": {
    "hbx": "dist/index.js",
    "hugoblox": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./welcome": {
      "types": "./dist/lib/welcome-api.d.ts",
      "import": "./dist/lib/welcome-api.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "hugoblox",
    "hbx",
    "hugo",
    "blox",
    "cli",
    "static-site-generator"
  ],
  "dependencies": {
    "chalk": "5.3.0",
    "commander": "11.1.0",
    "execa": "8.0.1",
    "ora": "7.0.1",
    "prompts": "2.4.2",
    "semver": "7.6.0",
    "yaml": "2.5.0",
    "keytar": "7.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@types/node": "20.11.20",
    "@types/keytar": "4.4.2",
    "@types/prompts": "2.4.9",
    "@vitest/coverage-v8": "1.4.0",
    "cross-env": "7.0.3",
    "tsup": "8.0.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vitest": "1.4.0"
  },
  "scripts": {
    "build": "tsup",
    "build:publish": "cross-env HBX_PUBLISH_BUILD=1 tsup",
    "dev": "tsx watch src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "publish:package": "pnpm lint && pnpm test && pnpm build:publish && node scripts/publish.js"
  }
}